@{ ViewData["Title"] = "Forgot Password"; }

@{ Layout = "/Views/Shared/_LoginForgotPWPageLayout.cshtml"; }

<br />
<div class="loginSignupForm text-center bg-light">
    <main class="form-signin">
        <form>
            <br />
            <img src="~/defaultimages/resetpassword.png" alt="mdo" width="50" height="50">
            <h1 class="h3 mb-3 fw-normal">Forgot Password</h1>

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>
            <br />

            <!--<a class="w-100 btn btn-lg btn-primary" href="#">Reset Password</a>-->
            <button class="w-100 btn btn-lg btn-primary" type="submit">Reset Password</button>
        </form>
    </main>
</div>